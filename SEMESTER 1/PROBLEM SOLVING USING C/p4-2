#include<stdio.h>
#include<conio.h>
void main()
{
  clrscr();
  int n,a[100],s,i;
  printf("Enter number of elements in the array:");
  scanf("%d",&n);
  for(i=0;i<n;i++){
    printf("a[%d]=",i);
    scanf("%d",&s);
    a[i]=s;
}
  printf("srno value E/O");
  for(i=0;i<n;i++){
    if(a[i]%2==0)  {
    printf("\n %d    %d   %s",i,a[i],"Even"); }
    else{
    printf("\n %d    %d   %s",i,a[i],"Odd");  } }
  getch();
}
