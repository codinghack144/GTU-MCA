#include <stdio.h>
#include<conio.h>
void main()
{
 int i = 0,min = 0,max=0;
 int *ptr;
 int arr[10] = {44,23,2,4,12,14,10,18,2,16};
 ptr = arr;
 min = *ptr;
 max = *ptr;
 printf("\nValues are : ");
 for(i = 0; i < 10; i++)
{
  printf("%d ",arr[i]);
  if(min>*ptr){
  min = *ptr;
 }
 if(max<*ptr)
 {
   max = *ptr;
 }
  ptr++;
 }
 printf("\nMin Values is: %d \nMax Value is: %d\n",min,max);
 getch();
}
