#include<stdio.h>
#include<conio.h>
#include<string.h>
void main()
{
  clrscr();
  char s[100],revs[100];
  int i,j,len;
  printf("\n Please Enter any Text:");
  gets(s);
  j=0;
  len=strlen(s);
  for(i=len-1;i>=0;i--)
  {
    revs[j++]=s[i];
  }
  revs[i]='\0';
  printf("\n And the result id=%s\n",revs);
  getch();
}
